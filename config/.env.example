# PennyBot LLM Agentic RAG - Environment Configuration
# Copy this file to .env in the project root and fill in your API keys

# =============================================================================
# REQUIRED API KEYS
# =============================================================================

# Together AI API Key (for LLM and embeddings)
# Get yours at: https://api.together.xyz/
TOGETHER_API_KEY=your_together_api_key_here

# Pinecone API Key (for vector database)
# Get yours at: https://www.pinecone.io/
PINECONE_API_KEY=your_pinecone_api_key_here

# =============================================================================
# MODEL CONFIGURATION (Optional - defaults provided)
# =============================================================================

# Embedding Model
# Options:
#   - BAAI/bge-base-en-v1.5 (768 dim, balanced)
#   - BAAI/bge-small-en-v1.5 (384 dim, faster)
#   - BAAI/bge-large-en-v1.5 (1024 dim, more accurate)
EMBEDDING_MODEL_NAME=BAAI/bge-base-en-v1.5

# LLM Model for generation
# Options:
#   - meta-llama/Llama-3-70b-chat-hf (recommended)
#   - meta-llama/Llama-3-8b-chat-hf (faster, cheaper)
#   - mistralai/Mixtral-8x7B-Instruct-v0.1 (alternative)
LLM_MODEL_NAME=meta-llama/Llama-3-70b-chat-hf

# =============================================================================
# PINECONE CONFIGURATION (Optional)
# =============================================================================

# Pinecone Index Name
PINECONE_INDEX_NAME=agentic-rag-index

# =============================================================================
# ADDITIONAL CONFIGURATION (Optional)
# =============================================================================

# Embedding Provider (currently only 'together' supported)
EMBEDDING_PROVIDER=together

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
